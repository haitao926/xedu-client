{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Jupyter Notebook Client",
  "version": "1.0.0",
  "identifier": "com.jupyternotebookclient.app",
  "build": {
    "frontendDist": "./src/dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Jupyter Notebook Client",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src http://localhost:5000 http://127.0.0.1:5000 http://0.0.0.0:5000 ws://localhost:5000"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "src-tauri/icons/32x32.png",
      "src-tauri/icons/128x128.png",
      "src-tauri/icons/128x128@2x.png",
      "src-tauri/icons/icon.icns",
      "src-tauri/icons/icon.ico"
    ]
  }
}
